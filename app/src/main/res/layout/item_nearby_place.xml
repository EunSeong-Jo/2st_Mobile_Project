<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_xs"
    android:layout_marginEnd="@dimen/spacing_xs"
    style="@style/Widget.AlbaDae.Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_m">

        <!-- Category Icon -->
        <ImageView
            android:id="@+id/iv_category_icon"
            android:layout_width="@dimen/icon_large"
            android:layout_height="@dimen/icon_large"
            android:src="@android:drawable/ic_menu_compass"
            android:contentDescription="카테고리"
            app:tint="@color/alba_orange"
            android:layout_gravity="center_horizontal" />

        <!-- Place Name -->
        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스타벅스"
            android:textSize="@dimen/text_body1"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spacing_s"
            android:gravity="center" />

        <!-- Category -->
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카페"
            android:textSize="@dimen/text_caption"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Distance and Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_s">

            <!-- Distance -->
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="320m"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/dmu_blue"
                android:gravity="center"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="2dp"
                android:drawableTint="@color/dmu_blue" />

            <!-- Rating -->
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.5"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/alba_orange"
                android:gravity="center"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="2dp"
                android:drawableTint="@color/alba_orange" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>