<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for web scraping -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Notification permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile_Project"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Mobile_Project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />

        <!-- User Type Selection Activity -->
        <activity
            android:name=".activity.UserTypeSelectionActivity"
            android:exported="false" />

        <!-- Signup Activities -->
        <activity
            android:name=".activity.SignupStudentActivity"
            android:exported="false" />

        <activity
            android:name=".activity.SignupEmployerActivity"
            android:exported="false" />

        <!-- Job Posting Activities -->
        <activity
            android:name=".activity.JobDetailActivity"
            android:exported="false" />

        <activity
            android:name=".activity.JobFormActivity"
            android:exported="false" />

        <!-- Schedule Activity -->
        <activity
            android:name=".activity.ScheduleFormActivity"
            android:exported="false" />

        <!-- Application Activities -->
        <activity
            android:name=".activity.ApplicationFormActivity"
            android:exported="false" />

        <activity
            android:name=".activity.MyApplicationsActivity"
            android:exported="false" />

        <!-- Review Activities -->
        <activity
            android:name=".activity.ReviewFormActivity"
            android:exported="false" />

        <activity
            android:name=".activity.ReviewListActivity"
            android:exported="false" />

        <!-- Find ID/Password Activities -->
        <activity
            android:name=".activity.FindIdActivity"
            android:exported="false" />

        <activity
            android:name=".activity.FindPasswordActivity"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Notice Check Receiver -->
        <receiver
            android:name=".util.NoticeAlarmManager$NoticeCheckReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>